@model KRV.LawnPro.Web.ViewModel.AppointmentViewModel;

@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="ml-2 mr-2 pt-3 pb-3">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Appointment.StartDateTime" class="control-label"></label>
                        <input type="date" asp-for="Appointment.StartDateTime" class="form-control"/>
                        <span asp-validation-for="Appointment.StartDateTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Appointment.ServiceId" class="control-label"></label>
                        <select asp-for="Appointment.ServiceId" class="form-control" asp-items="@(new SelectList(Model.ServiceTypes, "Id", "Description"))"></select>
                        <span asp-validation-for="Appointment.ServiceId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Request" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
