@model KRV.LawnPro.BL.Models.Appointment

@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="ml-2 mr-2 pt-3 pb-3">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ServiceType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ServiceType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StartDateTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StartDateTime)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>

            @{
                if (!string.IsNullOrEmpty(Model.EmployeeFullName))
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.EmployeeFullName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.EmployeeFullName)
                    </dd>

                }
                else
                {
                    <div>We have received your request and are currently working on scheduling it.  Thank you!</div>
                }
            }
        </dl>
    </div>
    <div class="ml-2">
        <a class="btn btn-primary btn-sm" asp-action="Index">Back to List</a>
    </div>

</div>


